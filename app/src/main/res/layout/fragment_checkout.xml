<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CheckoutFragment"
    android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_item"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_codigo"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:text="0001"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_descricao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="VASSOURA VERDE"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_quantidade"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_valor"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="R$ 10"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_valor_total"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="R$ 20"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

        </TableRow>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_products"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/fragment_product_list_item"
        android:layout_height="597dp"/>


</LinearLayout>